pipeline {
    agent any

    environment {
        GIT_BRANCH = 'main'
        GIT_URL    = 'https://github.com/pavankumarch1219/Amazon.git'
        TOMCAT_WEBAPPS = '/opt/tomcat/webapps'
    }

    stages {

        stage('Clone') {
            steps {
                git branch: "${GIT_BRANCH}", url: "${GIT_URL}"
            }
        }

        stage('Build WAR') {
            steps {
                sh '''
                mvn clean package
                '''
            }
        }

        stage('Deploy to Tomcat') {
            steps {
                sh '''
                echo "Deploying WAR to Tomcat..."
                cp Amazon-Web/target/*.war ${TOMCAT_WEBAPPS}/
                '''
            }
        }
    }

    post {
        success {
            echo "Amazon Web Application Deployed Successfully"
        }
        failure {
            echo "Deployment Failed"
        }
    }
}
