pipeline {
    agent { label 'built-in' }

    environment {
        git_branch = 'main'
        git_url = 'git@github.com:maruthibg1998/Amazon.git'
    }

    stages {

        stage('Clone') {
            steps {
                git branch: "${git_branch}", url: "${git_url}"
            }
        }

        stage('Clean') {
            steps {
                dir('Amazon') {
                    sh 'mvn clean'
                }
            }
        }

        stage('Compile') {
            steps {
                dir('Amazon') {
                    sh 'mvn compile'
                }
            }
        }

        stage('Test') {
            steps {
                dir('Amazon') {
                    sh 'mvn test'
                }
            }
        }

        stage('Package') {
            steps {
                dir('Amazon') {
                    sh 'mvn package'
                }
            }
        }

        stage('Install') {
            steps {
                dir('Amazon') {
                    sh 'mvn clean install'
                }
            }
        }
    }

    post {

        success {
            echo "Build completed successfully!"

            mail to: 'maruthi.abc.reports@gmail.com',
                 subject: "BUILD SUCCESS: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                 body: "The Jenkins job '${env.JOB_NAME}' build #${env.BUILD_NUMBER} completed SUCCESSFULLY.\n\nConsole output:\n${env.BUILD_URL}"
        }

        failure {
            echo "Build failed."

            mail to: 'maruthi.abc.reports@gmail',
                 subject: "BUILD FAILURE: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                 body: "The Jenkins job '${env.JOB_NAME}' build #${env.BUILD_NUMBER} has FAILED.\n\nConsole output:\n${env.BUILD_URL}"
        }

        unstable {
            echo "Build is unstable."

            mail to: 'maruthi.abc.reports@gmail.com',
                 subject: "BUILD UNSTABLE: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                 body: "The Jenkins job '${env.JOB_NAME}' build #${env.BUILD_NUMBER} is UNSTABLE.\n\nConsole output:\n${env.BUILD_URL}"
        }

        aborted {
            echo "Build aborted."

            mail to: 'maruthi.abc.reports@gmail.com',
                 subject: "BUILD ABORTED: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                 body: "The Jenkins job '${env.JOB_NAME}' build #${env.BUILD_NUMBER} was aborted.\n\nConsole output:\n${env.BUILD_URL}"
        }

        always {
            echo "Pipeline finished."
        }
    }
}