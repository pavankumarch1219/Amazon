pipeline {
    agent any

    stages {

        stage('Clone Project') {
            steps {
                git branch: 'main', url: 'https://github.com/pavankumarch1219/Amazon.git'
            }
        }

        stage('Clean') {
            steps {
                dir('Amazon') {
                    sh 'mvn clean'
                }
            }
        }

        stage('Compile') {
            steps {
                dir('Amazon') {
                    sh 'mvn compile'
                }
            }
        }

        stage('Test') {
            steps {
                dir('Amazon') {
                    sh 'mvn test'
                }
            }
        }

        stage('Build') {
            steps {
                dir('Amazon') {
                    sh 'mvn clean install'
                }
            }
        }
    }

    post {
        success {
            emailext(
                to: 'pavan.abc.reports@gmail.com',
                subject: "SUCCESS: AMAZON Job",
                body: """<b>üéâ Build Successful!</b><br><br>
                         <b>Job Name:</b> AMAZON<br>
                         <b>Status:</b> SUCCESS ‚úîÔ∏è<br>
                         <b>Build URL:</b> ${env.BUILD_URL}<br><br>
                         Regards,<br>
                         Jenkins Pipeline """
            )
        }
        failure {
            emailext(
                to: 'pavan.abc.reports@gmail.com',
                subject: "FAILED: AMAZON Job",
                body: """<b>‚ùå Build Failed!</b><br><br>
                         <b>Job Name:</b> AMAZON<br>
                         <b>Status:</b> FAILURE üö®<br>
                         <b>Check Logs here:</b> ${env.BUILD_URL}<br><br>
                         Regards,<br>
                         Jenkins Pipeline """
            )
        }
    }
}
